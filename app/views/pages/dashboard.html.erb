
<div class="container">

  <ul class="nav nav-pills" id="myNavTabs">
    <li class="active"><a class="nav-link active" href="#navtabs1" data-toggle="tab">Your Plans</a>
    <li><a class="nav-link " href="#navtabs2" data-toggle="tab">Liked plans</a>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="navtabs1">

      <h2 class="m-3 p-3 top-margin">Hi <%= @user.username%></h2>
      <div class="plan-and-profile">
        <div class="plans">
          <div class="row">
            <% @plans.each do |plan| %>
              <div class="col-sm-4">
                <div class="m-3 p-3">
                  <div class="card" style="width: 18rem;">
                   <div class= "card_header">
                         <div>
                           <h5 class="card-title"><%= plan.name %></h5>
                         </div>
                          <div>
                           <i class="fas fa-heart"><p><%= plan.get_upvotes.size %></p></i>
                          </div>
                    </div>
                      <div class="plan-image">
                        <img class="img-fluid" src="https://source.unsplash.com/C6oPXOatFD8">
                      </div>
                        <div class="card-footer">
                          <div class="card-footer-flex">
                              <div>
                                <p>By <%= plan.user.username %></p>
                              </div>
                              <div>
                                <p style="color:grey; font-size: 12px;">created at <%= plan.created_at.to_date %></p>
                              </div>
                          </div>
                              <div class="plan_button">
                                <button type="button" class="btn btn-warning btn-lg btn-block">select plan</button>
                              </div>
                        </div>
                    </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
     <div class="tab-pane fade" id="navtabs2">
       <h1 id="liked-plans" class="m-3 p-3 top-margin"><%= @user.username%>'s liked plans</h1>
        <div class="plan-and-profile">
           <div class="plans">
              <div class="row">
                <% if @user.find_up_voted_items.empty?%>
                  <h1>You have no liked plans</h1>
                <%else%>
                   <% @user.find_up_voted_items.each do |plan| %>
                  <div class="col-sm-4">
                    <div class="m-3 p-3">
                       <div class="card" style="width: 18rem;">
                          <div class= "card_header">
                            <div>
                              <h5 class="card-title"><%= plan.name %></h5>
                            </div>
                              <div>
                                <i class="fas fa-heart"><p><%= plan.get_upvotes.size %></p></i>
                              </div>
                            </div>
                              <div class="plan-image">
                                <img class="img-fluid" src="https://source.unsplash.com/C6oPXOatFD8">
                              </div>
                                <div class="card-footer">
                                  <div class="card-footer-flex">
                                     <div>
                                        <p>By <%= plan.user.username %></p>
                                     </div>
                                     <div>
                                        <p style="color:grey; font-size: 12px;">created at <%= plan.created_at.to_date %></p>
                                     </div>
                                  </div>
                                      <div class="plan_button">
                                          <button type="button" class="btn btn-warning btn-lg btn-block">select plan</button>
                                      </div>
                                </div>
                          </div>
                      </div>
                    </div>
                  <% end %>
                 <%end%>
              </div>
            </div>
          </div>
        </div>
     </div>
  </div>
</div>
